    {
      "name": "Launch Client",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:4001/index.html",
      "webRoot": "${workspaceFolder}/build/site/client",
      "pathMappings": [
        {
          "url": "http://localhost:4001/src",
          "path": "${workspaceFolder}/src"
        }
      ]
    },
    {
      "name": "Attach Server",
      "port": 5004,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Start Server",
      "program": "./build/server/index.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "buildServerDev",
      "type": "node"
    },
