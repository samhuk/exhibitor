{
  "name": "exhibitor",
  "version": "1.0.0",
  "description": "React component library workshop platform",
  "main": "./build/api/index.js",
  "types": "./build/api/index.d.ts",
  "bin": {
    "exhibitor": "./build/cli/cli/index.js"
  },
  "scripts": {
    "clean-unit-tests": "rimraf ./build-test",
    "build-unit-tests": "npx tsc -p ./src/tsconfig.test.json",
    "run-unit-tests": "jest",
    "unit-tests": "npm run clean-unit-tests && npm run build-unit-tests && npm run run-unit-tests",

    "lint": "eslint -c .eslintrc.json ./src --ext .ts,.tsx",
    "lint-errors-only": "eslint -c .eslintrc.json ./src --ext .ts,.tsx --quiet",

    "build-site-ts-client": "tsc -p ./src/site/client/tsconfig.json",
    "build-site-ts-server": "tsc -p ./src/site/server/tsconfig.json",
    "build-site-ts": "npm run clean-ts && npm run build-ts-server && npm run build-ts-client",

    "check": "npm rum lint-errors-only && npm run build-site-ts && npm run unit-tests",

    "clean-site-build": "rimraf ./build/site/build",
    "_build-site-build": "tsc -p ./src/site/build/tsconfig.json",
    "build-site-build": "npm run clean-site-build && npm run _build-site-build",

    "clean-site": "rimraf ./build/site/client && rimraf ./build/site/server",
    "_build-site-client-dev": "env-cmd -e dev node ./build/site/build/site/build/bin/buildClient.js",
    "_build-site-server-dev": "env-cmd -e dev node ./build/site/build/site/build/bin/buildServer.js",
    "build-site-dev": "npm run clean-site && npm run build-site-build && npm run _build-site-server-dev && npm run _build-site-client-dev",

    "_build-site-client-prod": "env-cmd -e prod node ./build/site/build/site/build/bin/buildClient.js",
    "_build-site-server-prod": "env-cmd -e prod node ./build/site/build/site/build/bin/buildServer.js",
    "build-site-prod": "npm run clean-site && npm run build-site-build && npm run _build-site-server-prod && npm run _build-site-client-prod",

    "watch-site-client-dev": "env-cmd -e dev node ./build/site/build/site/build/bin/watchClient.js",
    "watch-site-server-dev": "env-cmd -e dev node ./build/site/build/site/build/bin/watchServer.js",

    "clean-api": "rimraf ./build/api",
    "build-api": "tsc -p ./src/api/tsconfig.json",

    "clean-cli": "rimraf ./build/cli",
    "_build-cli": "tsc -p ./src/cli/tsconfig.json",
    "build-cli": "npm run clean-cli && npm run _build-cli",
    "cli-dev": "env-cmd -e dev node ./build/cli/cli/index.js -c ./test/componentLibrary/exh.config.json",
    "cli-prod": "env-cmd -e prod node ./build/cli/cli/index.js",

    "build-watch-component-library": "tsc -p ./src/cli/componentLibrary/bin/tsconfig.json",
    "watch-component-library": "env-cmd -e dev node ./build/component-library-bin/cli/componentLibrary/bin/watch.js",

    "start": "npm run build-site-build && npm run build-watch-component-library && concurrently -n \"testcomp,site-ui ,site-api\" -c \"red,green,blue\" \"npm run watch-component-library\" \"npm run watch-site-client-dev\" \"npm run watch-site-server-dev\"",

    "clean": "rimraf ./.exh ./build",
    "build": "npm run build-site-build && npm run build-site-prod && npm run build-api && npm run build-cli"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.6",
    "@samhuk/type-helpers": "^1.0.3",
    "ajax": "^0.0.4",
    "chokidar": "^3.5.3",
    "chokidar-debounced": "^1.0.4",
    "commander": "^9.4.1",
    "concurrently": "^7.4.0",
    "connect-livereload": "^0.6.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "esbuild": "^0.15.14",
    "esbuild-sass-plugin": "^2.4.1",
    "express": "^4.18.2",
    "globsie": "^0.0.10",
    "i": "^0.3.7",
    "jsdom": "^20.0.3",
    "livereload": "^0.9.3",
    "merge-deep": "^3.0.3",
    "npm": "^9.1.2",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "redux-thunk": "^2.4.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@types/connect-livereload": "^0.6.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/jsdom": "^20.0.1",
    "@types/livereload": "^0.9.2",
    "@types/merge-deep": "^3.0.0",
    "@types/node": "^18.8.5",
    "@types/nodemon": "^1.19.2",
    "@types/pako": "^2.0.0",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "babel-jest": "^29.1.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
