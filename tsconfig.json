{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "./src/**/*"
  ],
	"compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strictNullChecks": false,
		"strict": true,
		"isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": false,
    "jsx": "react"
	}
}
